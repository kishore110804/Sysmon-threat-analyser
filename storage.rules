rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read any file
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to upload files up to 10MB to their own user folder
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null 
                   && request.auth.uid == userId 
                   && request.resource.size < 10 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType.matches('application/pdf'));
    }
    
    // Allow authenticated users to upload files for designer applications
    match /designer-applications/{userId}/{applicationId}/{allPaths=**} {
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType.matches('application/pdf') ||
                       request.resource.contentType.matches('image/svg+xml'));
    }
    
    // Allow authenticated users to upload files for collaborations
    match /collaborations/{collaborationId}/{allPaths=**} {
      allow write: if request.auth != null
                   && request.resource.size < 15 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType.matches('application/pdf'));
    }
    
    // Public assets available to everyone
    match /public/{allPaths=**} {
      allow read: if true;
    }
  }
}
